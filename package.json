{
  "name": "effectsjs",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "yarn && npx lerna bootstrap --nohoist='*' --loglevel verbose",
    "postbootstrap": "run-s copy:nvmrc",
    "copy:nvmrc": "lerna exec -- cp ../../.nvmrc ./",
    "compile": "tsc -b packages",
    "build": "run-s compile build:docs",
    "build:docs": "lerna exec --scope effects-docs -- yarn build",
    "clean": "del 'packages/*/lib' 'packages/*/*.{tsbuildinfo}' 'packages/*/src/**/*.{map,d.ts}'",
    "format": "prettier './*.{js,ts}' './packages/**/*.{js,ts}' --write",
    "lint:format": "prettier './*.{js,ts}' './packages/**/*.{js,ts}' --check",
    "lint:logic": "eslint './.?*.js' 'packages/**/*.{js,ts}'",
    "lint": "run-p lint:*",
    "test": "lerna exec yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/effectsjs/effectsjs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/effectsjs/effectsjs/issues"
  },
  "homepage": "https://github.com/effectsjs/effectsjs#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "del-cli": "^3.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-app": "^6.2.1",
    "eslint": "^6.8.0",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  }
}
