extends layout.pug
block main
  script(src='/effectsjs/babel.js', async)
  script(src='/effectsjs/effects-runtime.bundle.js', async)
  script(src='//cdnjs.cloudflare.com/ajax/libs/ace/1.4.7/ace.js', async)
  link(rel="stylesheet", href="/effectsjs/components/editor/styles.css")
  script
    include ./editor.js
  block example_title
